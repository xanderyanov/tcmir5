mixin slider-promo
  .promoBox__area
    .promoBox
      .promoBox__big
        .mainSlider
          .swiper-container.swiper-container1
            .swiper-wrapper
              .swiper-slide.swiper-slide1(style='background-image: url(assets/img/shop2/kasper2.jpg);')
                .swiper__cadr
                  .swiper__infoBox
                    //- .swiper__infoBoxTitle Детская одежда
                    //- .swiper__infoBoxDescription в магазине Каспер
                    a.swiper__infoBoxLink(href='#') В магазин
                img(src='assets/img/slider1cover.png', alt='')
              .swiper-slide.swiper-slide1(style='background-image: url(assets/img/shop2/kasper1.jpg);')
                .swiper__cadr
                  .swiper__infoBox
                    //- .swiper__infoBoxTitle Одежда для девочек
                    //- .swiper__infoBoxDescription Новая летняя коллекция в магазине Каспер
                    a.swiper__infoBoxLink(href='#') В магазин
                img(src='assets/img/slider1cover.png', alt='')
            // Add Pagination
            .swiper-pagination.swiper-pagination1
            // Add Arrows
            .swiper-pagination.swiper-button-prev.swiper-button-prev1
              i.icon-arr-left1
            .swiper-pagination.swiper-button-next.swiper-button-next1
              i.icon-arr-right1
      .promoBox__small
        .promoBox__smallInner.promoBox__smallInner_1
          a(href='#' style='background-image: url(assets/img/shop2/Giotto1.jpg);')
            img(src='assets/img/slider1small.png', alt='')
            span.promoBox__smallLink В магазин
        .promoBox__smallInner.promoBox__smallInner_2 
          a(href='#' style='background-image: url(assets/img/shop2/nebrosko1.jpg);')
            img(src='assets/img/slider1small.png', alt='')
            span.promoBox__smallLink В магазин